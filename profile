
# User programs
PATH="$PATH:$HOME/.local/bin/"

# Example for Java
#PATH="$PATH:/usr/local/jdk-21/bin/"

# Default editor
export EDITOR=nano

# Disable animations and enable colors for 2048
alias 2048="2048 -Ac"

# Shell prompt theme
export PS1='\[\033[04;37m\]\s-\v\[\033[00m\] \[\033[01;36m\]\u\[\033[01;32m\]@\[\033[01;33m\]\h \[\033[01;35m\]\w \[\033[01;31m\]\$ \[\033[00m\]'
